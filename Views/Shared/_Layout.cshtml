<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Skill Swap Project</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Skill_Swap_Project.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-100">

    <!-- Header -->
    <header>
        <nav class="bg-blue-600 text-white shadow-md">
            <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">

                <!-- Logo -->
                <a asp-controller="Home" asp-action="Index"
                   class="text-xl font-bold hover:text-gray-200">
                    Skill Swap
                </a>

                <!-- Menu -->
                <div class="space-x-6">
                    <a asp-controller="find_skill" asp-action="find_skill"
                       class="hover:text-gray-200">
                        Find Skill
                    </a>

                    <a asp-controller="HowWorks" asp-action="Index"
                       class="hover:text-gray-200">
                        How Works
                    </a>

                    <a asp-controller="AboutUs" asp-action="Index"
                       class="hover:text-gray-200">
                        About Us
                    </a>

                    <a asp-controller="SignUp" asp-action="SignUp"
                       class="bg-white text-blue-600 px-4 py-1 rounded hover:bg-gray-200">
                        Sign Up
                    </a>

                    <a asp-controller="Login" asp-action="Login"
                       class="border border-white px-4 py-1 rounded hover:bg-blue-700">
                        Login
                    </a>
                </div>

            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto p-6">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-white border-t mt-10">
        <div class="max-w-7xl mx-auto p-4 text-center text-gray-600">
            &copy; 2026 - Skill Swap Project -
            <a asp-controller="Home" asp-action="Privacy"
               class="text-blue-600 hover:underline">
                Privacy
            </a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>