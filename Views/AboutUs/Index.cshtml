@{
    ViewData["Title"] = "About Us";
}

<section class="bg-blue-600 text-white text-center py-20">
    <div class="max-w-4xl mx-auto px-6">
        <h1 class="text-4xl md:text-5xl font-bold">About Skill Swap</h1>
        <p class="mt-6 text-lg text-blue-100">
            Empowering individuals through peer-to-peer knowledge exchange.
        </p>
    </div>
</section>


<section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-6 grid md:grid-cols-2 gap-12 items-center">

        <div>
            <h2 class="text-3xl font-bold mb-4">Who We Are</h2>
            <p class="text-gray-700 mb-4">
                Skill Swap is a collaborative learning platform where
                professionals exchange knowledge without financial barriers.
            </p>

            <p class="text-gray-600">
                We believe everyone has something valuable to teach and
                something exciting to learn.
            </p>
        </div>

        <div>
            <img src="~/images/story.jpg"
                 class="rounded-2xl shadow-lg"
                 alt="About Image" />
        </div>

    </div>
</section>


<section class="bg-gray-100 py-16">
    <div class="max-w-7xl mx-auto px-6 text-center">

        <h2 class="text-3xl font-bold mb-10">Our Mission</h2>

        <div class="grid md:grid-cols-3 gap-8">

            <div class="bg-white p-6 rounded-2xl shadow">
                <h3 class="text-xl font-semibold mb-2">Connect</h3>
                <p class="text-gray-600">
                    Connecting learners and experts worldwide.
                </p>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow">
                <h3 class="text-xl font-semibold mb-2">Empower</h3>
                <p class="text-gray-600">
                    Empowering growth through shared expertise.
                </p>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow">
                <h3 class="text-xl font-semibold mb-2">Grow</h3>
                <p class="text-gray-600">
                    Creating opportunities for mutual professional success.
                </p>
            </div>

        </div>

    </div>
</section>
